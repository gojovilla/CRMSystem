@model IEnumerable<CRMSystem.Models.User>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New User
            </a>
        </div>
    </div>
    <br /><br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th> Email Id </th>
                <th> Username </th>
                <th> Mobile Number </th>
                <th> Designation </th>
                <th> IsAdmin </th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Email
                    </td>
                    <td width="30%">
                        @obj.UserName
                    </td>
                    <td width="50%">
                        @obj.Mobile
                    </td>
                    <td width="30%">
                        @obj.Designation
                    </td>
                    @if (@obj.IsAdmin == 1)
                    {
                        <td width="30%">
                            Yes
                        </td>
                    }
                    else
                    {
                        <td width="30%">
                            No
                        </td>
                    }
                   
                    <td>
                        <div class="m-75 btn-group" role="group">
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="m-75 btn-group" role="group">
                            <a asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>