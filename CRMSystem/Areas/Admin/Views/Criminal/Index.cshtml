@model IEnumerable<CRMSystem.Models.Criminal>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Criminal List </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Criminal" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Criminal
            </a>
        </div>
    </div>
    <br /><br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Firat Name </th>
                <th> LastName </th>
                <th> Mobile Number</th>
                <th> Age </th>
                <th> LocationOfIncident</th>
                <th> DateTimeReported </th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.FirstName
                    </td>
                    <td width="30%">
                        @obj.LastName
                    </td>
                    <td width="50%">
                        @obj.ContactNumber
                    </td>
                    <td width="30%">
                        @obj.Age
                    </td>
                    <td width="30%">
                        @obj.LocationOfIncident
                    </td>
                    <td width="30%">
                        @obj.DateTimeReported
                    </td>

                    <td>
                        <div class="m-75 btn-group" role="group">
                            <a asp-controller="Criminal" asp-action="Edit" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="m-75 btn-group" role="group">
                            <a asp-controller="Criminal" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>